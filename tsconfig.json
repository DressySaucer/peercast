{
    "compilerOptions": {
        "module": "commonjs",
        "noUnusedLocals": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "jsx": "react",
        "strict": true,
        "skipLibCheck": true,
        "rootDir": "./src",
        "outDir": "./dist",
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/*"]
        }
    },
    "include": ["./src/electron/*.ts", "./src/**/*.d.ts"]
}
