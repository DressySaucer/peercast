{
    "compilerOptions": {
        "module": "esnext",
        "moduleResolution": "node",
        "target": "ES2022",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "importHelpers": true,
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": true,
        "sourceMap": true,
        "jsx": "react",
        "strict": true,
        "outDir": "./out",
        "useUnknownInCatchVariables": false
    },
    "include": ["./src/**/*.tsx"]
}
